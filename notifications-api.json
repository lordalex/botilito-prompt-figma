{
    "openapi": "3.0.3",
    "info": {
        "title": "Botilito Notifications API",
        "description": "API for managing the user notification lifecycle. It supports asynchronous dispatching via a job queue (allowing broadcasts) and synchronous inbox management.\n\n**Key Features:**\n- **Async Dispatch:** `POST /send` creates a background job to deliver messages to one or thousands of users without blocking.\n- **Flexible Targeting:** Send to a single user, a specific list of UUIDs, or broadcast to all users with a specific role.\n- **Inbox Management:** Filtering, pagination, and read-status tracking.",
        "version": "1.2.0",
        "contact": {
            "name": "API Support",
            "email": "dev@botilito.dev"
        }
    },
    "servers": [
        {
            "url": "https://mdkswlgcqsmgfmcuorxq.supabase.co/functions/v1/notifications",
            "description": "Production Edge Function"
        }
    ],
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT",
                "description": "Supabase User Token. Required for all endpoints."
            }
        },
        "schemas": {
            "SendRequest": {
                "type": "object",
                "description": "Payload to dispatch notifications. This initiates a background job.",
                "required": [
                    "target",
                    "content"
                ],
                "properties": {
                    "target": {
                        "$ref": "#/components/schemas/NotificationTarget"
                    },
                    "content": {
                        "$ref": "#/components/schemas/NotificationContent"
                    }
                }
            },
            "NotificationTarget": {
                "type": "object",
                "description": "Defines the recipients of the notification.",
                "required": [
                    "type",
                    "value"
                ],
                "properties": {
                    "type": {
                        "type": "string",
                        "enum": [
                            "single",
                            "multiple",
                            "broadcast_role"
                        ],
                        "description": "Delivery strategy:\n- `single`: One specific User UUID.\n- `multiple`: An array of User UUIDs.\n- `broadcast_role`: All users who have a specific role in `perfiles_usuario`."
                    },
                    "value": {
                        "description": "The target identifier(s) corresponding to the type.",
                        "oneOf": [
                            {
                                "type": "string",
                                "format": "uuid",
                                "description": "For 'single'"
                            },
                            {
                                "type": "string",
                                "description": "For 'broadcast_role' (e.g. 'admin', 'verified')"
                            },
                            {
                                "type": "array",
                                "items": {
                                    "type": "string",
                                    "format": "uuid"
                                },
                                "description": "For 'multiple'"
                            }
                        ]
                    }
                },
                "example": {
                    "type": "single",
                    "value": "123e4567-e89b-12d3-a456-426614174000"
                }
            },
            "NotificationContent": {
                "type": "object",
                "required": [
                    "title"
                ],
                "properties": {
                    "title": {
                        "type": "string",
                        "example": "An√°lisis Completado"
                    },
                    "message": {
                        "type": "string",
                        "example": "El caso #456 ha sido verificado exitosamente."
                    },
                    "priority": {
                        "type": "string",
                        "enum": [
                            "low",
                            "normal",
                            "high"
                        ],
                        "default": "normal"
                    },
                    "type": {
                        "type": "string",
                        "enum": [
                            "info",
                            "success",
                            "warning",
                            "error"
                        ],
                        "default": "info"
                    },
                    "metadata": {
                        "type": "object",
                        "description": "Arbitrary JSON data attached to the notification (e.g., links, job IDs).",
                        "example": {
                            "job_id": "550e8400...",
                            "action_url": "/cases/123"
                        }
                    }
                }
            },
            "JobAcceptedResponse": {
                "type": "object",
                "properties": {
                    "message": {
                        "type": "string",
                        "example": "Notifications queued for delivery"
                    },
                    "job_id": {
                        "type": "string",
                        "format": "uuid",
                        "description": "ID of the background job handling the dispatch."
                    }
                }
            },
            "InboxResponse": {
                "type": "object",
                "properties": {
                    "unread_count": {
                        "type": "integer",
                        "description": "Total number of unread notifications for the user.",
                        "example": 5
                    },
                    "notifications": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/NotificationItem"
                        }
                    }
                }
            },
            "NotificationItem": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string",
                        "format": "uuid"
                    },
                    "user_id": {
                        "type": "string",
                        "format": "uuid"
                    },
                    "title": {
                        "type": "string"
                    },
                    "message": {
                        "type": "string",
                        "description": "The body text of the notification."
                    },
                    "type": {
                        "type": "string",
                        "enum": [
                            "info",
                            "success",
                            "warning",
                            "error"
                        ]
                    },
                    "priority": {
                        "type": "string"
                    },
                    "is_read": {
                        "type": "boolean"
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "metadata": {
                        "type": "object"
                    }
                }
            },
            "MarkReadRequest": {
                "type": "object",
                "description": "Action to update read status. Provide either `notification_id` OR `mark_all: true`.",
                "properties": {
                    "notification_id": {
                        "type": "string",
                        "format": "uuid",
                        "description": "Mark a single specific notification as read."
                    },
                    "mark_all": {
                        "type": "boolean",
                        "description": "If true, marks ALL notifications for the calling user as read."
                    }
                }
            },
            "SuccessResponse": {
                "type": "object",
                "properties": {
                    "message": {
                        "type": "string",
                        "example": "Updated status"
                    }
                }
            },
            "ErrorResponse": {
                "type": "object",
                "properties": {
                    "error": {
                        "type": "string"
                    }
                }
            }
        }
    },
    "security": [
        {
            "bearerAuth": []
        }
    ],
    "paths": {
        "/send": {
            "post": {
                "summary": "Dispatch Notifications",
                "description": "Queues a background job to send notifications. This is an asynchronous operation; it returns 202 Accepted immediately.",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/SendRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "202": {
                        "description": "Job Queued Successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/JobAcceptedResponse"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Validation Error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized"
                    }
                }
            }
        },
        "/inbox": {
            "get": {
                "summary": "Retrieve Inbox",
                "description": "Fetches notifications for the authenticated user, ordered by creation date (newest first).",
                "parameters": [
                    {
                        "name": "type",
                        "in": "query",
                        "schema": {
                            "type": "string",
                            "enum": [
                                "info",
                                "success",
                                "warning",
                                "error"
                            ]
                        },
                        "description": "Filter by notification category."
                    },
                    {
                        "name": "unread",
                        "in": "query",
                        "schema": {
                            "type": "boolean"
                        },
                        "description": "If `true`, returns only unread items."
                    },
                    {
                        "name": "limit",
                        "in": "query",
                        "schema": {
                            "type": "integer",
                            "default": 20
                        },
                        "description": "Maximum number of items to return."
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Inbox Data",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/InboxResponse"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized"
                    }
                }
            }
        },
        "/read": {
            "patch": {
                "summary": "Mark as Read",
                "description": "Updates the `is_read` status of notifications to `true`.",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/MarkReadRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/SuccessResponse"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request (Missing ID or Flag)",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized"
                    }
                }
            }
        }
    }
}